        // === VUỐT MƯỢT - THEO CHUYỂN ĐỘNG TAY ===
        function setupSmoothSwipe() {
            const carousel = document.getElementById('storyCarousel');
            const images = document.getElementById('storyImages');

            const getPositionX = (e) => {
                return e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
            };

            const touchStart = (e) => {
                if (WEDDING_CONFIG.stories.length <= 1) return;

                isDragging = true;
                startX = getPositionX(e);
                animationID = requestAnimationFrame(animation);
                carousel.style.transition = 'none';
                clearInterval(storyAuto);
            };

            const touchMove = (e) => {
                if (!isDragging) return;

                const currentPosition = getPositionX(e);
                currentTranslate = prevTranslate + currentPosition - startX;

                // Giới hạn kéo không quá 100px
                const maxDrag = 100;
                if (Math.abs(currentTranslate) > maxDrag) {
                    currentTranslate = currentTranslate > 0 ? maxDrag : -maxDrag;
                }
            };

            const touchEnd = () => {
                if (!isDragging) return;

                isDragging = false;
                cancelAnimationFrame(animationID);

                const movedBy = currentTranslate - prevTranslate;

                // Ngưỡng vuốt: 30px
                if (movedBy < -30) {
                    nextStory();
                } else if (movedBy > 30) {
                    prevStory();
                }

                // Reset
                currentTranslate = 0;
                prevTranslate = 0;
                carousel.style.transition = 'transform 0.5s cubic-bezier(0.25, 0.8, 0.25, 1)';
                carousel.style.transform = 'translateX(0)';

                startStoryAuto();
            };

            const animation = () => {
                if (isDragging) {
                    carousel.style.transform = `translateX(${currentTranslate}px)`;
                    requestAnimationFrame(animation);
                }
            };

            // Events
            images.addEventListener('mousedown', touchStart);
            images.addEventListener('mousemove', touchMove);
            images.addEventListener('mouseup', touchEnd);
            images.addEventListener('mouseleave', touchEnd);

            images.addEventListener('touchstart', touchStart, { passive: true });
            images.addEventListener('touchmove', touchMove, { passive: true });
            images.addEventListener('touchend', touchEnd);
        }
