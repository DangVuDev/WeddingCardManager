.timeline-line {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 4px;
    background: linear-gradient(180deg, 
        transparent 0%, 
        #ff80ab 10%, 
        #f06292 50%, 
        #ff80ab 90%, 
        transparent 100%
    );
    border-radius: 2px;
    box-shadow: 0 0 20px rgba(255, 107, 157, 0.3);
    transform: translateX(-50%);
    z-index: 0;
}

/* Hiệu ứng xuất hiện xen kẽ trái-phải */
.timeline-content {
    margin: 0 28px 60px 28px;
    max-width: 480px;
    padding: 44px;
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(12px);
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 28px;
    box-shadow: 
        0 8px 32px 0 rgba(255, 107, 157, 0.15), 
        inset 0 1px 0 0 rgba(255, 255, 255, 0.6);
    position: relative;
    transition: all 0.6s cubic-bezier(0.34, 0.68, 0.25, 1);
    z-index: 1;

    /* Ẩn ban đầu */
    opacity: 0;
    transform: translateX(0) translateY(40px);
}

/* Trái → phải xen kẽ */
.timeline-content:nth-child(odd) { 
    transform: translateX(-80px) translateY(40px);
    margin-right: auto;
}
.timeline-content:nth-child(even) { 
    transform: translateX(80px) translateY(40px);
    margin-left: auto;
